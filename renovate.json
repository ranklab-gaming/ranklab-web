{
  "extends": ["config:base"],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackageNames": ["cypress"],
      "postUpgradeTasks": {
        "commands": ["./bin/update-cypress"],
        "fileFilters": [".github/workflows/ci.yml"],
        "executionMode": "update"
      }
    }
  ]
}
