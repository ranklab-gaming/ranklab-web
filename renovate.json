{
  "extends": ["config:base"],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["next"],
      "allowedVersions": "13.4.12"
    },
    {
      "matchPackageNames": ["node"],
      "matchManagers": ["dockerfile"],
      "allowedVersions": "^20"
    }
  ],
  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "hostType": "docker",
      "username": "$",
      "encrypted": {
        "password": ""
      }
    }
  ]
}
