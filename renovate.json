{
  "extends": ["config:base"],
  "platformAutomerge": true,
  "detectHostRulesFromEnv": true,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["next"],
      "automerge": false
    }
  ]
}
