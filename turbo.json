{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["**/.next/**", "**/dist/**", "**/build/**"]
    },
    "test": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["@ranklab/api#build", "@ranklab/server#build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_ASSETS_CDN_URL",
    "NEXT_PUBLIC_UPLOADS_CDN_URL",
    "NEXT_PUBLIC_SENTRY_DSN",
    "NODE_ENV",
    "HOST"
  ]
}
