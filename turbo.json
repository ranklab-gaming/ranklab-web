{
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@ranklab/web#build": {
      "dependsOn": ["^build", "@ranklab/api#build"],
      "outputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["@ranklab/api#build"],
      "cache": false
    }
  },
  "globalDependencies": ["tsconfig.json"],
  "globalEnv": [
    "NEXT_PUBLIC_ASSETS_CDN_URL",
    "NEXT_PUBLIC_UPLOADS_CDN_URL",
    "NEXT_PUBLIC_SENTRY_DSN",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
    "NODE_ENV"
  ]
}
