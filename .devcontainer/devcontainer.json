{
  "name": "Ranklab Web",
  "postCreateCommand": ["bash", "-ic", "yarn install"],
  "image": "node:latest",
  "containerUser": "node",
  "extensions": [
    "esbenp.prettier-vscode",
    "naumovs.color-highlight",
    "ms-vsliveshare.vsliveshare"
  ],
  "forwardPorts": [3000],
  "remoteEnv": {
    "AUTH0_SECRET": "${localEnv:AUTH0_SECRET}",
    "AUTH0_CLIENT_SECRET": "${localEnv:AUTH0_CLIENT_SECRET}",
    "AUTH0_CLIENT_ID": "XLNoyT68ijnDoKRe6YA51gnhRY4Z9ag8",
    "AUTH0_BASE_URL": "http://localhost:3000",
    "AUTH0_ISSUER_BASE_URL": "https://ranklab-development.eu.auth0.com"
  },
  "settings": {
    "editor.codeActionsOnSave": ["source.addMissingImports"],
    "editor.codeLens": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.rulers": [100],
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": false,
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/.git/objects/**": true,
      "**/node_modules/**": true,
      "**/tmp/**": true
    },
    "git.autofetch": true,
    "prettier.requireConfig": true,
    "search.followSymlinks": false,
    "security.workspace.trust.untrustedFiles": "open",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.editor.closeEmptyGroups": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.settings.useSplitJSON": true
  }
}
