{
  "private": true,
  "keywords": [
    "turbo"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --ignore=\"packages/ranklab-web/cypress/**/*\"",
    "start": "turbo run start",
    "codegen": "./bin/codegen",
    "test": "NODE_ENV=test turbo run build test --ignore=\"packages/ranklab-web/cypress/**/*\""
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "turbo": "1.1.2"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "@ranklab/web#build": {
        "dependsOn": [
          "^build",
          "@ranklab/api#build"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "cache": false
      },
      "dev": {
        "cache": false
      }
    },
    "globalDependencies": [
      "$NEXT_PUBLIC_CDN_URL",
      "$NEXT_PUBLIC_SENTRY_DSN",
      "tsconfig.json",
      ".env.*"
    ]
  }
}
